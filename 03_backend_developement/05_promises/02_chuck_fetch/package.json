{
  "name": "promisified-chuck",
  "version": "1.0.0",
  "main": "./src/index.ts",
  "license": "MIT",
  "scripts": {
    "start": "ts-node ./src/index.ts",
    "test": "eslint --ext .js,.ts . && jest"
  },
  "devDependencies": {
    "@types/jest": "26.0.4",
    "@types/node-fetch": "^2.5.7",
    "@typescript-eslint/eslint-plugin": "3.6.0",
    "@typescript-eslint/parser": "3.6.0",
    "eslint": "7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "fetch-mock-jest": "^1.2.8",
    "fwl-readline": "fewlines-education/fwl-readline#master",
    "jest": "26.1.0",
    "node-fetch": "^2.6.0",
    "readline": "^1.3.0",
    "ts-jest": "26.1.2",
    "ts-node": "^8.7.0",
    "typescript": "^3.8.3"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "env": {
      "browser": true,
      "node": true
    },
    "ignorePatterns": [
      "jest.config.js",
      "node_modules/",
      "*.test.ts",
      "src.sample/*"
    ],
    "rules": {
      "@typescript-eslint/explicit-function-return-type": 1,
      "@typescript-eslint/no-explicit-any": 0
    }
  },
  "jest": {
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "warnOnly": true
        }
      }
    },
    "testEnvironment": "node"
  },
  "prettier": {
    "semi": true,
    "trailingComma": "all",
    "singleQuote": false,
    "printWidth": 120,
    "tabWidth": 2
  },
  "dependencies": {
    "prettier": "^2.0.5",
    "request": "^2.88.2"
  }
}
